<div class="container py-4">
  <% if notice.present? %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="mb-3">
    <h1 class="h4 mb-0">Document</h1>
  </div>

  <div class="card shadow-sm mb-3">
    <div class="card-body">
      <%= render @document %>
    </div>
  </div>

  <div class="d-flex flex-wrap gap-2">
    <%= link_to "Edit", edit_document_path(@document), class: "btn btn-outline-primary" %>
    <%= link_to "Back", documents_path, class: "btn btn-outline-secondary" %>
    <%= button_to "Destroy", @document, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </div>
</div>
