<% content_for :title, "Documents" %>

<div class="container py-4">
  <% if notice.present? %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Documents</h1>
    <%= link_to "New document", new_document_path, class: "btn btn-primary" %>
  </div>

  <% if @documents.any? %>
    <div class="row g-3" id="documents">
      <% @documents.each do |document| %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body p-3">
              <%= render document %>
            </div>
            <div class="card-footer bg-white border-top-0 pt-0 pb-3 px-3">
              <%= link_to "Show", document, class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to "Edit", edit_document_path(document), class: "btn btn-sm btn-outline-primary ms-1" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-muted fst-italic">No documents yet.</div>
  <% end %>
</div>
