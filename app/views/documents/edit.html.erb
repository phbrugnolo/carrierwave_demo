<% content_for :title, "Editing document" %>

<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">Edit document</h1>
    <div class="d-flex gap-2">
      <%= link_to "Show", @document, class: "btn btn-outline-primary" %>
      <%= link_to "Back", documents_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <%= render "form", document: @document %>
</div>
